    /**
     * @notice Set COIN speed for a single market
     * @param cToken The market whose COIN speed to update
     * @param supplySpeed New supply-side COIN speed for market
     * @param borrowSpeed New borrow-side COIN speed for market
     */
    function setFinanceSpeedInternal(CToken cToken, uint supplySpeed, uint borrowSpeed) internal {
        Market storage market = markets[address(cToken)];
        require(market.isListed, "finance market is not listed");

        if (financeSupplySpeeds[address(cToken)] != supplySpeed) {
            // Supply speed updated so let's update supply state to ensure that
            //  1. COIN accrued properly for the old speed, and
            //  2. COIN accrued at the new speed starts after this block.
            updateFinanceSupplyIndex(address(cToken));

            // Update speed and emit event
            financeSupplySpeeds[address(cToken)] = supplySpeed;
            emit FinanceSupplySpeedUpdated(cToken, supplySpeed);
        }

        if (financeBorrowSpeeds[address(cToken)] != borrowSpeed) {
            // Borrow speed updated so let's update borrow state to ensure that
            //  1. COIN accrued properly for the old speed, and
            //  2. COIN accrued at the new speed starts after this block.
            Exp memory borrowIndex = Exp({mantissa: cToken.borrowIndex()});
            updateFinanceBorrowIndex(address(cToken), borrowIndex);

            // Update speed and emit event
            financeBorrowSpeeds[address(cToken)] = borrowSpeed;
            emit FinanceBorrowSpeedUpdated(cToken, borrowSpeed);
        }
    }

    /**
     * @notice Accrue COIN to the market by updating the supply index
     * @param cToken The market whose supply index to update
     * @dev Index is a cumulative sum of the COIN per cToken accrued.
     */
    function updateFinanceSupplyIndex(address cToken) internal {
        FinanceMarketState storage supplyState = financeSupplyState[cToken];
        uint supplySpeed = financeSupplySpeeds[cToken];
        uint32 blockNumber = safe32(getBlockNumber(), "block number exceeds 32 bits");
        uint deltaBlocks = sub_(uint(blockNumber), uint(supplyState.block));
        if (deltaBlocks > 0 && supplySpeed > 0) {
            uint supplyTokens = CToken(cToken).totalSupply();
            uint financeAccrued = mul_(deltaBlocks, supplySpeed);
            Double memory ratio = supplyTokens > 0 ? fraction(financeAccrued, supplyTokens) : Double({mantissa: 0});
            supplyState.index = safe224(add_(Double({mantissa: supplyState.index}), ratio).mantissa, "new index exceeds 224 bits");
            supplyState.block = blockNumber;
        } else if (deltaBlocks > 0) {
            supplyState.block = blockNumber;
        }
    }

    /**
     * @notice Accrue COIN to the market by updating the borrow index
     * @param cToken The market whose borrow index to update
     * @dev Index is a cumulative sum of the COIN per cToken accrued.
     */
    function updateFinanceBorrowIndex(address cToken, Exp memory marketBorrowIndex) internal {
        FinanceMarketState storage borrowState = financeBorrowState[cToken];
        uint borrowSpeed = financeBorrowSpeeds[cToken];
        uint32 blockNumber = safe32(getBlockNumber(), "block number exceeds 32 bits");
        uint deltaBlocks = sub_(uint(blockNumber), uint(borrowState.block));
        if (deltaBlocks > 0 && borrowSpeed > 0) {
            uint borrowAmount = div_(CToken(cToken).totalBorrows(), marketBorrowIndex);
            uint financeAccrued = mul_(deltaBlocks, borrowSpeed);
            Double memory ratio = borrowAmount > 0 ? fraction(financeAccrued, borrowAmount) : Double({mantissa: 0});
            borrowState.index = safe224(add_(Double({mantissa: borrowState.index}), ratio).mantissa, "new index exceeds 224 bits");
            borrowState.block = blockNumber;
        } else if (deltaBlocks > 0) {
            borrowState.block = blockNumber;
        }
    }

    /**
     * @notice Calculate COIN accrued by a supplier and possibly transfer it to them
     * @param cToken The market in which the supplier is interacting
     * @param supplier The address of the supplier to distribute COIN to
     */
    function distributeSupplierFinance(address cToken, address supplier) internal {
        // TODO: Don't distribute supplier COIN if the user is not in the supplier market.
        // This check should be as gas efficient as possible as distributeSupplierFinance is called in many places.
        // - We really don't want to call an external contract as that's quite expensive.

        FinanceMarketState storage supplyState = financeSupplyState[cToken];
        uint supplyIndex = supplyState.index;
        uint supplierIndex = financeSupplierIndex[cToken][supplier];

        // Update supplier's index to the current index since we are distributing accrued COIN
        financeSupplierIndex[cToken][supplier] = supplyIndex;

        if (supplierIndex == 0 && supplyIndex >= financeInitialIndex) {
            // Covers the case where users supplied tokens before the market's supply state index was set.
            // Rewards the user with COIN accrued from the start of when supplier rewards were first
            // set for the market.
            supplierIndex = financeInitialIndex;
        }

        // Calculate change in the cumulative sum of the COIN per cToken accrued
        Double memory deltaIndex = Double({mantissa: sub_(supplyIndex, supplierIndex)});

        uint supplierTokens = CToken(cToken).balanceOf(supplier);

        // Calculate COIN accrued: cTokenAmount * accruedPerCToken
        uint supplierDelta = mul_(supplierTokens, deltaIndex);

        uint supplierAccrued = add_(financeAccrued[supplier], supplierDelta);
        financeAccrued[supplier] = supplierAccrued;

        emit DistributedSupplierFinance(CToken(cToken), supplier, supplierDelta, supplyIndex);
    }

    /**
     * @notice Calculate COIN accrued by a borrower and possibly transfer it to them
     * @dev Borrowers will not begin to accrue until after the first interaction with the protocol.
     * @param cToken The market in which the borrower is interacting
     * @param borrower The address of the borrower to distribute COIN to
     */
    function distributeBorrowerFinance(address cToken, address borrower, Exp memory marketBorrowIndex) internal {
        // TODO: Don't distribute supplier COIN if the user is not in the borrower market.
        // This check should be as gas efficient as possible as distributeBorrowerFinance is called in many places.
        // - We really don't want to call an external contract as that's quite expensive.

        FinanceMarketState storage borrowState = financeBorrowState[cToken];
        uint borrowIndex = borrowState.index;
        uint borrowerIndex = financeBorrowerIndex[cToken][borrower];

        // Update borrowers's index to the current index since we are distributing accrued COIN
        financeBorrowerIndex[cToken][borrower] = borrowIndex;

        if (borrowerIndex == 0 && borrowIndex >= financeInitialIndex) {
            // Covers the case where users borrowed tokens before the market's borrow state index was set.
            // Rewards the user with COIN accrued from the start of when borrower rewards were first
            // set for the market.
            borrowerIndex = financeInitialIndex;
        }

        // Calculate change in the cumulative sum of the COIN per borrowed unit accrued
        Double memory deltaIndex = Double({mantissa: sub_(borrowIndex, borrowerIndex)});

        uint borrowerAmount = div_(CToken(cToken).borrowBalanceStored(borrower), marketBorrowIndex);

        // Calculate COIN accrued: cTokenAmount * accruedPerBorrowedUnit
        uint borrowerDelta = mul_(borrowerAmount, deltaIndex);

        uint borrowerAccrued = add_(financeAccrued[borrower], borrowerDelta);
        financeAccrued[borrower] = borrowerAccrued;

        emit DistributedBorrowerFinance(CToken(cToken), borrower, borrowerDelta, borrowIndex);
    }

    /**
     * @notice Calculate additional accrued COIN for a contributor since last accrual
     * @param contributor The address to calculate contributor rewards for
     */
    function updateContributorRewards(address contributor) public {
        uint financeSpeed = financeContributorSpeeds[contributor];
        uint blockNumber = getBlockNumber();
        uint deltaBlocks = sub_(blockNumber, lastContributorBlock[contributor]);
        if (deltaBlocks > 0 && financeSpeed > 0) {
            uint newAccrued = mul_(deltaBlocks, financeSpeed);
            uint contributorAccrued = add_(financeAccrued[contributor], newAccrued);

            financeAccrued[contributor] = contributorAccrued;
            lastContributorBlock[contributor] = blockNumber;
        }
    }

