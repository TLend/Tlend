    /**
     * @notice Claim all finance accrued by the holders
     * @param holders The addresses to claim COIN for
     * @param cTokens The list of markets to claim COIN in
     * @param borrowers Whether or not to claim COIN earned by borrowing
     * @param suppliers Whether or not to claim COIN earned by supplying
     */
    function claimFinance(address[] memory holders, CToken[] memory cTokens, bool borrowers, bool suppliers) public {
        for (uint i = 0; i < cTokens.length; i++) {
            CToken cToken = cTokens[i];
            require(markets[address(cToken)].isListed, "market must be listed");
            if (borrowers == true) {
                Exp memory borrowIndex = Exp({mantissa: cToken.borrowIndex()});
                updateFinanceBorrowIndex(address(cToken), borrowIndex);
                for (uint j = 0; j < holders.length; j++) {
                    distributeBorrowerFinance(address(cToken), holders[j], borrowIndex);
                }
            }
            if (suppliers == true) {
                updateFinanceSupplyIndex(address(cToken));
                for (uint j = 0; j < holders.length; j++) {
                    distributeSupplierFinance(address(cToken), holders[j]);
                }
            }
        }
        for (uint j = 0; j < holders.length; j++) {
            financeAccrued[holders[j]] = grantFinanceInternal(holders[j], financeAccrued[holders[j]]);
        }
    }

