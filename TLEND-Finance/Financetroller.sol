     * @dev Note: If there is not enough COIN, we do not perform the transfer all.
     * @param user The address of the user to transfer COIN to
     * @param amount The amount of COIN to (possibly) transfer
     * @return The amount of COIN which was NOT transferred to the user
     */
    function grantFinanceInternal(address user, uint amount) internal returns (uint) {
        IERC20 finance = IERC20(FinanceAddress);
        uint financeRemaining = finance.balanceOf(address(this));
        if (amount > 0 && amount <= financeRemaining) {
            finance.transfer(user, amount);
            return 0;
        }
        return amount;
    }

    /*** Finance Distribution Admin ***/

    /**
     * @notice Transfer COIN to the recipient
     * @dev Note: If there is not enough COIN, we do not perform the transfer all.
     * @param recipient The address of the recipient to transfer COIN to
     * @param amount The amount of COIN to (possibly) transfer
     */
    function _grantFinance(address recipient, uint amount) public {
        require(adminOrInitializing(), "only admin can grant finance");
        uint amountLeft = grantFinanceInternal(recipient, amount);
        require(amountLeft == 0, "insufficient finance for grant");
        emit FinanceGranted(recipient, amount);
    }

    /**
     * @notice Set COIN borrow and supply speeds for the specified markets.
     * @param cTokens The markets whose COIN speed to update.
     * @param supplySpeeds New supply-side COIN speed for the corresponding market.
     * @param borrowSpeeds New borrow-side COIN speed for the corresponding market.
     */
    function _setFinanceSpeeds(CToken[] memory cTokens, uint[] memory supplySpeeds, uint[] memory borrowSpeeds) public {
        require(adminOrInitializing(), "only admin can set finance speed");

        uint numTokens = cTokens.length;
        require(numTokens == supplySpeeds.length && numTokens == borrowSpeeds.length, "Financetroller::_setFinanceSpeeds invalid input");

        for (uint i = 0; i < numTokens; ++i) {
            setFinanceSpeedInternal(cTokens[i], supplySpeeds[i], borrowSpeeds[i]);
        }
    }

    /**
     * @notice Set COIN speed for a single contributor
     * @param contributor The contributor whose COIN speed to update
     * @param financeSpeed New COIN speed for contributor
     */
    function _setContributorFinanceSpeed(address contributor, uint financeSpeed) public {
        require(adminOrInitializing(), "only admin can set finance speed");

        // note that COIN speed could be set to 0 to halt liquidity rewards for a contributor
        updateContributorRewards(contributor);
        if (financeSpeed == 0) {
            // release storage
            delete lastContributorBlock[contributor];
        } else {
            lastContributorBlock[contributor] = getBlockNumber();
        }
        financeContributorSpeeds[contributor] = financeSpeed;

        emit ContributorFinanceSpeedUpdated(contributor, financeSpeed);
    }

    /**
     * @notice Return all of the markets
     * @dev The automatic getter may be used to access an individual market.
     * @return The list of market addresses
     */
    function getAllMarkets() public view returns (CToken[] memory) {
        return allMarkets;
    }

    /**
     * @notice Returns true if the given cToken market has been deprecated
     * @dev All borrows in a deprecated cToken market can be immediately liquidated
     * @param cToken The market to check if deprecated
     */
    function isDeprecated(CToken cToken) public view returns (bool) {
        return
            markets[address(cToken)].collateralFactorMantissa == 0 &&
            borrowGuardianPaused[address(cToken)] == true &&
            cToken.reserveFactorMantissa() == 1e18
        ;
    }

    function getBlockNumber() virtual public view returns (uint) {
        return block.number;
    }

    function setFinanceAddress(address _FinanceAddress) virtual public {
        require(adminOrInitializing(), "only admin can set finance");
        FinanceAddress = _FinanceAddress;
    }


